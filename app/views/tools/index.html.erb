<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Herramientas </li>
</ol>


<div id="LeDivTools">
  <h1><i class="fa fa-wrench"></i>  Herramientas</h1>

  <div id = "table2">
  </div>
  <div id="invetario"> Inventario </div>
  <br>

      <style type="text/css">
      .tg  {border-collapse:collapse;border-spacing:0;border-color:#999;}
      .tg td{font-family:Arial, sans-serif;font-size:15px;padding:12px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;border-color:#999;color:#444;background-color:#F7FDFA;}
      .tg th{font-family:Arial, sans-serif;font-size:16px;font-weight:normal;padding:15px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;border-color:#999;color:#fff;background-color:#43654A;}
      .tg .tg-qpa3{font-family:Arial, Helvetica, sans-serif !important;text-align:center}
      .tg .tg-s6z2{text-align:center}
      .tg .tg-093g{font-weight:bold;text-align:center}
      .tg .tg-hgcj{font-weight:bold;text-align:center}
      .tg .tg-092g{color:#FFFFFF;background-color:#FFFFFF;font-weight:bold;text-align:left;font-size:14px;font-style: oblique; border-width:0px;line-height:1.4em;}

      </style> 

	<div id="search">
		<%= form_tag(tools_path, :method => "get", id: "search-form") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Herramienta a buscar" %>
			<%= submit_tag "Buscar", :class => 'btn btn-success btn-sm', :name => nil %>
		<% end %>
	</div>
  <br>
	
  <thead>
    <table class="tg">
      <tr>
        <th class="tg-093g">Nombre</th>
        <th class="tg-hgcj">Marca</th>
    <!--     <th>Type</th>
        <th>National good</th>
        
        <th>Use</th> -->
        <th class="tg-hgcj">Status</th>
        <th class="tg-hgcj">Responsable</th>
        <th class="tg-hgcj">Ubicación</th>
     <!--    <th>Material</th>
        <th>Bill</th>
        <th>From set</th>
        <th>Investigation</th>
        <th>Teaching</th>
        <th>Extention</th>
        <th>Management</th> -->
     
      </tr>
     </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <tr>
          <td class="tg-s6z2"><%= link_to tool.name, tool %></td>
          <td class="tg-s6z2"><%= tool.brand %></td>
         <!--  <td><%= tool.type %></td>
          <td><%= tool.national_good %></td>
        
         -->
          <td class="tg-qpa3"><%= tool.status %></td>
          <td class="tg-qpa3"><%= tool.responsible %></td>
          <td class="tg-s6z2"><%= tool.location %></td>
        <!--   <td><%= tool.material %></td>
          <td><%= tool.bill %></td>
          <td><%= tool.from_set %></td>
          <td><%= tool.investigation %></td>
          <td><%= tool.teaching %></td>
          <td><%= tool.extention %></td>
          <td><%= tool.management %></td> -->


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if can? :create, @tool %>
    <i class="fa fa-plus-circle"></i><%= link_to ' Nueva herramienta', new_tool_path %> | 
  <% end %>
  <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url %>
  <br><br><br><br><br><br><br><br><br><br><br>
  
</div>
