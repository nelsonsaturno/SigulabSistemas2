<div id="LeDivConsumibles">
  <h1><i class="fa fa-fire"></i> Consumibles</h1>


  <div id = "table2">
  </div>
  <br>

      <style type="text/css">
      .tg  {border-collapse:collapse;border-spacing:0;border-color:#999;}
      .tg td{font-family:Arial, sans-serif;font-size:15px;padding:12px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;border-color:#999;color:#444;background-color:#F7FDFA;}
      .tg th{font-family:Arial, sans-serif;font-size:16px;font-weight:normal;padding:15px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;border-color:#999;color:#fff;background-color:#D3BD13;}
      .tg .tg-qpa3{font-family:Arial, Helvetica, sans-serif !important;;text-align:center}
      .tg .tg-s6z2{text-align:center;}
      .tg .tg-093g{font-weight:bold;text-align:center;}
      .tg .tg-hgcj{font-weight:bold;text-align:center; padding:15px;}
      .tg .tg-092g{color:#FFFFFF;background-color:#FFFFFF;font-weight:bold;text-align:left;font-size:14px;font-style: oblique; border-width:0px; padding: 4px;line-height:1.4em;}

      </style>  

	<div id="search">
		<%= form_tag(consumables_path, :method => "get", id: "search-form") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Consumible a buscar" %>
			<%= submit_tag "Buscar",:class => 'btn btn-success btn-sm', :name => nil %>
		<% end %>
	</div>
  <br>
   <table class="tg">
    <thead>
      <tr>
        <th></th>
        <th class="tg-093g">Nombre</th>
         <th class="tg-hgcj">Cantidad</th>
      <!--  <th class="tg-hgcj">Descripción</th> -->
        
          
      
        <th class="tg-hgcj">Ubicación</th>
      <!--   <th>Use</th> -->
        <th class="tg-hgcj">Responsable</th>
         <th class="tg-093g">Material</th>
  <!--       <th>Investigation</th>
        <th>Teaching</th>
        <th>Extention</th>
        <th>Management</th> -->

      </tr>
    </thead>

    <tbody>
      <% @consumables.each do |consumable| %>
        <tr>
          <td class="tg-s6z2"><input type="checkbox"></td>
          <td class="tg-s6z2"><%= link_to consumable.name, consumable %></td>
          <td class="tg-qpa3"><%= consumable.quantity %></td>
          <!--  <td class="tg-s6z2"><%= consumable.description %></td> -->
    <!--      -->
          
    
          <td class="tg-qpa3"><%= consumable.location %></td>
  <!--          -->
         <td class="tg-s6z2"><%= consumable.responsible %></td>
         <td class="tg-qpa3"><%= consumable.material %></td>
  <!--         <td><%= consumable.investigation %></td>
          <td><%= consumable.teaching %></td>
          <td><%= consumable.extention %></td>
          <td><%= consumable.management %></td> -->


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if can? :create, @consumable %>
    <i class="fa fa-plus-circle"></i><%= link_to ' Nuevo Consumible', new_consumable_path, 'data-no-turbolink' => true %> | 
  <%end%>
  <i class="fa fa-exchange"></i><%= link_to ' Solicitar Préstamo ', new_loan_path %> | 
    <i class="fa fa-phone"></i><%= link_to ' Solicitar Servicio ', new_application_url %> |
  <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url %>
  <br><br><br><br>
</div>
