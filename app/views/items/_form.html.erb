
  <script src="js/bootstrap.min.js" type="text/javascript"></script>

<div class="grid_7 push_5">
   <%= form_for(@item) do |f| %>
   <% if @item.errors.any? %>
      <h2>Error: se han introducido datos incorrectos</h2>
      <br>
   <% end %>
	<div class ="table">
	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Nombre del ítem" %><br>
		 <%= f.text_field :nombre, :placeholder => "Nombre del consumible" %>
	  </div>
    <div class="field">
       <span class="red">*</span>
		 <%= f.label "Tipo del ítem" %><br>
     <%= f.collection_select :tipo, Item::TipoItem, :to_s, :to_s, 
          :include_blank => true %>
	  </div>
	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Descripción del ítem" %><br>
		 <%= f.text_area :descripcion, :placeholder => "Máximo 100 caracteres" %>
	  </div>
	  <div class="field">
		 <%= f.label "Dimensiones del ítem" %><br>
		 <%= f.text_field :dimensiones, :placeholder => "Largo * Ancho * Profundidad " %>
	  </div>
	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Cantidad" %><br>
		 <%= f.number_field :cantidad, :placeholder => "Cantidad de ítems" %>
	  </div>
	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Unidad de medida" %><br>
		 <%= f.text_field :unidad, :placeholder => "Tamaño y medida" %>
	  </div>
     <br>
	  <div class="actions">
		 <%= f.submit "Aceptar" ,data: { confirm: '¿Está seguro de la informacion que acaba de suministrar?' } %><br>
	  </div>
   <% end %>
	</div>
	<%= link_to '<button type="button" class="btn btn-primary"> Volver a la página anterior </button>'.html_safe, 
  especificacionesTecnicas_url %>
</div>

